{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "es2020",
    "jsx": "react",
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "allowJs": true,
    "experimentalDecorators": false,
    "skipLibCheck": true,
    "strict": true,
    "useDefineForClassFields": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-missing-import": "off"
        },
        "cssTemplateTags": []
      }
    ]
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.*", "src/**/*.stories.ts"]
}
