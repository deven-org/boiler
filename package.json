{
  "name": "@boiler/boiler",
  "version": "0.0.1",
  "description": "Component Library",
  "main": "./dist/main.js",
  "types": ".dist/types/index.d.js",
  "scripts": {
    "commitlint": "commitlint -c -e",
    "prestart": "npm run tokens:generate --workspace=@boiler/figma-design-tokens",
    "start": "start-storybook -p 1337",
    "copy:static": "mkdir -p dist/assets/fonts && cp -rip static/fonts/* dist/assets/fonts/",
    "build": "NODE_ENV=production webpack --config webpack.prod.js && npm run copy:static",
    "build:types": "rimraf types && tsc --emitDeclarationOnly",
    "lint": "npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "lint:eslint": "eslint 'src/**' --ext .ts,.tsx",
    "lint:stylelint": "stylelint 'src/**/css.ts'",
    "format:eslint": "eslint 'src/**' --ext .ts,.tsx --fix",
    "lint:prettier": "prettier \"**/*.{ts,tsx}\" --check",
    "format:prettier": "prettier \"**/*.{ts,tsx}\" --write",
    "build-storybook": "build-storybook",
    "test": "wtr --config web-test-runner.config.mjs",
    "test:update-snapshots": "npm run test -- --update-snapshots",
    "test:a11y": "build-storybook && sb extract ./storybook-static && node --experimental-json-modules utils/create-pa11y-config.mjs && pa11y-ci --config ./.pa11yci",
    "doc:install": "deven-documentation-skeleton install",
    "doc:check": "deven-documentation-skeleton check",
    "doc:update": "deven-documentation-skeleton update",
    "compile:icons": "rimraf src/foundation/icons && svgo -f assets/icon-set -o src/foundation/icons --config svgo.config.js && node ./utils/create-icons-index.mjs && prettier ./src/foundation/icons/index.ts --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deven-org/BO1LER-Kitchen/BO1LER.git"
  },
  "workspaces": [
    "./packages/*"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deven-org/BO1LER-Kitchen/issues"
  },
  "homepage": "https://github.com/deven-org/BO1LER-Kitchen#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@boiler/figma-design-tokens": "0.0.1",
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-decorators": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@open-wc/testing": "3.1.7",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/cli": "^6.5.0",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/web-components": "^6.5.16",
    "@types/react": "^18.0.27",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/test-runner": "^0.15.0",
    "babel-loader": "^9.1.2",
    "chalk": "^5.2.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "deven-documentation-skeleton": "^1.5.0",
    "eslint": "^8.32.0",
    "eslint-plugin-lit": "^1.8.2",
    "eslint-plugin-lit-a11y": "^1.1.0-next.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-storybook": "^0.6.10",
    "eslint-plugin-wc": "^1.4.0",
    "eslint-webpack-plugin": "^3.2.0",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "lit-html": "^2.6.1",
    "mini-css-extract-plugin": "^2.7.2",
    "pa11y-ci": "3.0.1",
    "postcss-lit": "^1.0.1",
    "prettier": "2.8.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "release-please": "^15.1.1",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "svgo": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "lodash.camelcase": "4.3.0"
  },
  "dependencies": {
    "@lit-labs/react": "^1.1.1",
    "lit": "^2.6.1"
  }
}
